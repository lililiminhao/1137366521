<title>优惠券</title>


<style>
    #add_quan .content .result {
        display: none;
        padding-left: 24px;
        background: #f0f0f0;
        height: 180px;
        overflow-y: scroll;
        width: 560px;
        margin-left: 36px;
    }

    #add_quan .content .result li {
        margin: 0;
        line-height: 36px;
        height: 36px;
        overflow:hidden;
        cursor:pointer;
    }
</style>
</head>
<body roleid="$!role.id" >
    <div id="add_quan">
    	
        <h3>编辑优惠券</h3>
        
        <div class="content">
            <ul class="list">
                <li>
                    <i>*</i>
                    <span>角色类型：</span>
                    <label><input type="radio"  name="role_type" value="2" #if($role.roleType == 2) checked #end >管理员</label>
                    <label><input type="radio"  name="role_type" value="3" #if($role.roleType == 3) checked #end>供应商</label>
                    <label><input type="radio"  name="role_type" value="4" #if($role.roleType == 4) checked #end>分销商</label>
                </li>
                <li class="item">
                    <i>*</i>
                    <span>角色名称：</span>
                    <input type="text"  placeholder="长度限制10个汉字以内" required="required" class="role_name" maxlength="10" value="$!role.roleName">
                </li>
                 <li>
                    <i>*</i>
                    <span>角色状态：</span>
                    <label><input type="radio"   name="role_status" value="1" #if($role.roleStatus == 1) checked #end>启用</label>
                    <label><input type="radio"  name="role_status" value="-1" #if($role.roleStatus == -1) checked #end>禁用</label>
                </li>
                
                <li class="item">
                    <i>*</i>
                    <span>备注：</span>
                    <input type="text"  placeholder="长度限制100个汉字以内" required="required" class="remark" maxlength="100" value="$!role.remark">
                </li>
                <div class="result"></div>
            </ul>
        </div> 
	        <div class="opt" >
	            <button id="save">保存</button>
	            <button id="cancel" onclick="javascript :history.back(-1);">取消</button>
	        </div>
       
        
    </div>
    <script src="/jdvop/script/jquery-1.8.3.min.js"></script>
    <script src="/jdvop/script/admin/clipboard.min.js"></script>
    <script src="/jdvop/script/admin/jquery.datetimepicker.full.min.js"></script>
    <script>


        
        
        var form = {
            name:'',
            code:'',
            startTime:'',
            endTime:'',
            type:'',
            area:'',
            targetType:'',
            count:''
        }

        
       
            <!--保存-->
            $('#save').on('click',function(){
            	var tt = $('body').attr('roleid');
                var roleName = $('.role_name').val();//角色名称
                var roleType = $('input[name="role_type"]:checked').val();//角色类型
                var roleStatus = $('input[name="role_status"]:checked').val();//角色状态
                var remark = $('.remark').val();//角色备注
                
                if(roleName==''){
                    top.artAlert('温馨提示', '角色名称不能为空', 'error');
                    return;
                }
                 if(roleType==''){
                    top.artAlert('温馨提示', '角色类型不能为空', 'error');
                    return;
                }
                 if(roleStatus==''){
                    top.artAlert('温馨提示', '角色状态不能为空', 'error');
                    return;
                }
                
                	 $.ajax({
	                    url:'/jdvop/admin/Role/edit.php',
	                    type:'get',
	                    data:{
	                    	id:tt,
	                        roleName:roleName,
	                        roleType:roleType,
	                        roleStatus:roleStatus,
	                        remark:remark,
	                    },
	                    success:function(res){
	                        res = JSON.parse(res);
	                        if(res.code ==1 ){
	                            location.href = '/jdvop/admin/role/list.php';
	                        }else{
	                            top.artAlert('温馨提示', res.msg, 'error');
	                        }
	                    }
	                })
               
            })
        
    </script>
</body>
</html>